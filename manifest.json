{
  "manifest_version": 2,
  "name": "Xdebug Button",
  "version": "0.1.2",
  "description": "",
  "homepage_url": "https://github.com/bash/xdebug-webextension",
  "permissions": [
    "tabs",
    "cookies",
    "storage",
    "<all_urls>"
  ],
  "icons": {
    "128": "icons/icon.svg"
  },
  "page_action": {
    "default_icon": "icons/icon.svg",
    "default_title": "Enable Xdebug"
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "default_locale": "en",
  "applications": {
    "gecko": {
      "id": "xdebug-button@rubys.ninja"
    }
  }
}
