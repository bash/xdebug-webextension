{
  "manifest_version": 2,
  "name": "Xdebug Helper",
  "version": "0.1.0",
  "description": "",
  "homepage_url": "https://github.com/bash/xdebug-webextension",
  "permissions": [
    "tabs",
    "cookies",
    "storage",
    "https://*/*",
    "http://*/*"
  ],
  "icons": {
    "128": "icons/icon.svg"
  },
  "page_action": {
    "default_icon": "icons/icon.svg",
    "default_title": "Enable Xdebug"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "default_locale": "en"
}
